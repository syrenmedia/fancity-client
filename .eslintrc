{
  "env": {
    "browser": true,
    "node": true,
    "worker": true,
    "mocha": true,
    "shelljs": true,
//    "es6": true // <-- messes with strict settings for non-es6 code
  },
  "globals": {
    "Promise": true,
    "chai": true
  },
  "ecmaFeatures": {
    "arrowFunctions": true,
    "binaryLiterals": true,
    "blockBindings": true,
    "classes": true,
    "defaultParams": true,
    "destructuring": true,
    "forOf": true,
    "generators": true,
//    "modules": true, // <-- also contributes to breaking "strict" rule
    "objectLiteralComputedProperties": true,
    "objectLiteralDuplicateProperties": true,
    "objectLiteralShorthandMethods": true,
    "objectLiteralShorthandProperties": true,
    "octalLiterals": true,
    "regexUFlag": true,
    "regexYFlag": true,
    "spread": true,
    "superInFunctions": true,
    "templateStrings": true,
    "unicodeCodePointEscapes": true,
    "globalReturn": true,
    "jsx": false
  },
  "rules": {
    // 0 is off
    // 1 is warning
    // 2 is error (stops execution? for sure returns a 1 exit code)
    // Possible Errors
    "comma-dangle": [ 1, "never" ],
    "no-cond-assign": [ 1, "except-parens" ],
    "no-console": 0,
    "no-constant-condition": 1,
    "no-control-regex": 1,
    "no-debugger": 1,
    "no-dupe-args": 2,
    "no-dupe-keys": 2,
    "no-duplicate-case": 2,
    "no-empty": 1,
    "no-empty-character-class": 1,
    "no-ex-assign": 2,
    "no-extra-boolean-cast": 1,
    "no-extra-parens": 1,
    "no-extra-semi": 1,
    "no-func-assign": 1,
    "no-inner-declarations": [ 1, "functions" ],
    "no-invalid-regexp": 2,
    "no-irregular-whitespace": 2,
    "no-negated-in-lhs": 2,
    "no-obj-calls": 2,
    "no-regex-spaces": 2,
    "no-sparse-arrays": 2,
    "no-unreachable": 2,
    "use-isnan": 2,
    "valid-jsdoc": 1,
    "valid-typeof": 2,

    // Best Practices
    "accessor-pairs": 0,
    "block-scoped-var": 0,
    "complexity": [ 1, 8 ],
    "consistent-return": 1,
    "curly": [ 2, "all" ],
    "default-case": 1,
    "dot-notation": 1,
    "dot-location": 0,
    "eqeqeq": [ 2, "allow-null" ],
    "guard-for-in": 1,
    "no-alert": 1,
    "no-caller": 2,
    "no-div-regex": 1,
    "no-else-return": 1,
    "no-empty-label": 1,
    "no-eq-null": 0,
    "no-eval": 2,
    "no-extend-native": 1,
    "no-extra-bind": 1,
    "no-fallthrough": 1,
    "no-floating-decimal": 0,
    "no-implied-eval": 2,
    "no-iterator": 1,
    "no-labels": 0,
    "no-lone-blocks": 2,
    "no-loop-func": 2,
    "no-multi-spaces": 2,
    "no-multi-str": 2,
    "no-native-reassign": 2,
    "no-new": 1,
    "no-new-func": 2,
    "no-new-wrappers": 2,
    "no-octal": 2,
    "no-octal-escape": 2,
    "no-process-env": 2,
    "no-proto": 2,
    "no-redeclare": 2,
    "no-return-assign": 1,
    "no-script-url": 2,
    "no-self-compare": 2,
    "no-sequences": 2,
    "no-throw-literal": 2,
    "no-unused-expressions": 2,
    "no-void": 2,
    "no-warning-comments": [
      0, /* off for now */ {
        "terms": [ "todo", "fixme", "maybe" ],
        "location": "anywhere"
      }
    ],
    "no-with": 2,
    "radix": 2,
    "vars-on-top": 2,
    "wrap-iife": [ 2, "inside" ],
    "yoda": [ 2, "never" ],

    // Strict Mode
    "strict": [ 2, "global" ],

    // Variables
    "no-catch-shadow": 1,
    "no-delete-var": 2,
    "no-label-var": 2,
    "no-shadow": 2,
    "no-shadow-restricted-names": 2,
    "no-undef": 2,
    "no-undef-init": 2,
    "no-undefined": 0,
    "no-unused-vars": [
      2, {
        "vars": "local",
        "args": "none"
      }
    ],
    "no-use-before-define": 2,

    // NodeJS
    "handle-callback-err": [ 2, "^(err|error)$" ],
    "no-mixed-requires": [ 0, false ],
    "no-new-require": 2,
    "no-path-concat": 2,
    "no-process-exit": 2,
    "no-restricted-modules": [ 0, "os" ],
    "no-sync": 2,

    // Stylistic Issues
    "array-bracket-spacing": [ 2, "always", {
      "singleValue": true,
      "objectsInArrays": false,
      "arraysInArrays": false
    }],
    "indent": [ 2, 2, {
      "SwitchCase": 1,
      "VariableDeclarator": 1
    }],
    "brace-style": [ 0, "1tbs" ],
    "camelcase": 0,
    "comma-spacing": [ 1, { "before": false, "after": true }],
    "comma-style": [ 1, "last" ],
    "consistent-this": [ 1, "self" ],
    "eol-last": 1,
    "func-names": 0,
    "func-style": [ 2, "expression" ],
    "key-spacing": [ 2, {
      "beforeColon": false,
      "afterColon": true
    }],
    "max-nested-callbacks": [ 2, 6 ],
    "new-cap": [
      2, {
        "newIsCap": true,
        "capIsNew": true,
        "newIsCapExceptions": [],
        "capIsNewExceptions": [ "Object", "Function", "Number", "String", "Boolean", "Date", "Array", "Symbol", "RegExp", "Polymer" ]
      }
    ],
    "new-parens": 1,
    "no-array-constructor": 2,
    "no-inline-comments": 0,
    "no-lonely-if": 1,
    "no-mixed-spaces-and-tabs": 2,
    "no-multiple-empty-lines": 0,
    "no-nested-ternary": 1,
    "no-new-object": 2,
    "no-spaced-func": 2,
    "no-ternary": 0,
    "no-trailing-spaces": 1,
    "no-underscore-dangle": 0,
    "no-wrap-func": 0,
    "one-var": 2,
    "operator-assignment": [ 2, "always" ],
    "padded-blocks": 0,
    "quote-props": [ 2, "as-needed" ],
    "quotes": [ 1, "single", "avoid-escape" ],
    "semi": [ 2, "always" ],
    "semi-spacing": [ 0, { "before": false, "after": true }],
    "sort-vars": 0,
    "space-after-keywords": [ 1, "always" ],
    "space-before-blocks": [ 1, "always" ],
    "space-before-function-paren": [ 1, "never" ],
    "space-in-parens": [ 1, "always", {
      "exceptions": [
        "{}",
        "[]",
        "()",
        "empty"
      ]
    }],
    "space-infix-ops": [ 1, { "int32Hint": false }],
    "space-return-throw-case": 1,
    "space-unary-ops": [ 1, {
      "words": true,
      "nonwords": false
    }],
    "spaced-comment": 0,
    "wrap-regex": 2,

    // ES 6 Options
    "constructor-super": 1,
    "generator-star-spacing": [ 1, "after" ],
    "no-this-before-super": 1,
    "no-var": 0,
    "object-shorthand": 0


    // Legacy
    // none enabled
  }
}
